{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "baseUrl": ".",
    "outDir": "../dist-electron",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": false,
    "forceConsistentCasingInFileNames": false,
    "declaration": false,
    "removeComments": true
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "dist-electron"]
}
